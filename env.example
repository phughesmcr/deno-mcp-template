# Example environment configuration for the MCP server
# Copy this file to .env and modify the values as needed

# Server Configuration
MCP_PORT=3001
MCP_HOSTNAME=localhost
MCP_LOG_LEVEL=info
MCP_HEADERS="Authorization <token>"
MCP_ALLOW_ORIGINS="*"
MCP_ALLOW_HOSTS="localhost"
MCP_NO_HTTP=false
MCP_NO_STDIO=false
MCP_NO_DNS_REBINDING=false

# Add your custom environment variables below
# API_KEY=your-api-key-here
# DATABASE_URL=your-database-url-here 