# Example environment configuration for the MCP server
# Copy this file to .env and modify the values as needed

# Server Configuration
MCP_PORT=3001
MCP_HOSTNAME=localhost
MCP_HEADERS="Authorization <token>"
MCP_ALLOWED_ORIGINS="*"
MCP_ALLOWED_HOSTS="localhost"
MCP_NO_HTTP=false
MCP_NO_STDIO=false
MCP_DNS_REBINDING=false
MCP_JSON_RESPONSE=false

