{
    "name": "@phughesmcr/deno-mcp-template",
    "version": "0.5.2",
    "license": "MIT",
    "exports": "./main.ts",
    "description": "A demo package for MCP servers in Deno",
    "keywords": [
        "demo",
        "deno",
        "mcp",
        "template",
        "boilerplate",
        "ai",
        "agent",
        "llm",
        "dxt"
    ],
    "homepage": "https://github.com/phughesmcr/deno-mcp-template",
    "bugs": {
        "url": "https://github.com/phughesmcr/deno-mcp-template/issues"
    },
    "author": "P. Hughes <github@phugh.es>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/phughesmcr/deno-mcp-template.git"
    },
    "imports": {
        "$/": "./src/",
        "@cliffy/command": "jsr:@cliffy/command@^1.0.0",
        "@cliffy/flags": "jsr:@cliffy/flags@^1.0.0",
        "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.27.1",
        "@std/async": "jsr:@std/async@^1.0.19",
        "@std/cli": "jsr:@std/cli@^1.0.26",
        "@std/dotenv/load": "jsr:@std/dotenv@^0.225.6/load",
        "@std/path": "jsr:@std/path@^1.1.4",
        "@std/ulid": "jsr:@std/ulid@^1.0.0",
        "hono": "jsr:@hono/hono@^4.11.7",
        "hono-rate-limiter": "npm:hono-rate-limiter@^0.5.3",
        "zod": "npm:zod@^4.3.6",
        "zod-validation-error": "npm:zod-validation-error@^5.0.0"
    },
    "tasks": {
        "setup": "deno run -A scripts/setup-template.ts",
        "start": "deno run -A main.ts",
        "dev": "MCP_ALLOWED_ORIGINS=http://localhost:6274,http://localhost:3001 npx @modelcontextprotocol/inspector deno run -A --watch main.ts -l=debug",
        "test:integration": "deno test --frozen -A test",
        "test:coverage": "deno test --frozen -A --coverage=coverage test && deno coverage coverage --lcov --output=coverage/lcov.info",
        "bench": "deno bench --frozen --allow-env --allow-read --allow-write --allow-net --allow-sys test",
        "ci": "CI=1 deno fmt && deno lint --fix && deno check --frozen main.ts && deno check --frozen src/**/*.ts && deno task test:integration",
        "clean:dist": "deno run -A scripts/clean-dist.ts",
        "compile:win": {
            "description": "Create a binary for Windows",
            "dependencies": ["clean:dist"],
            "command": "deno compile -A --include ./static -o ./dist/server/server.exe main.ts --target x86_64-pc-windows-msvc --icon=./static/icon.ico"
        },
        "compile:mac:arm64": {
            "description": "Create a binary for Apple silicon macs (M1, M2, etc.)",
            "dependencies": ["clean:dist"],
            "command": "deno compile -A --include ./static -o ./dist/server/server_mac_arm64 main.ts --target aarch64-apple-darwin"
        },
        "compile:mac:x64": {
            "description": "Create a binary for Intel macs",
            "dependencies": ["clean:dist"],
            "command": "deno compile -A --include ./static -o ./dist/server/server_mac_x64 main.ts --target x86_64-apple-darwin"
        },
        "compile:linux:x64": {
            "description": "Create a binary for Linux (x64)",
            "dependencies": ["clean:dist"],
            "command": "deno compile -A --include ./static -o ./dist/server/server_linux_x64 main.ts --target x86_64-unknown-linux-gnu"
        },
        "compile:linux:arm64": {
            "description": "Create a binary for Linux (arm64)",
            "dependencies": ["clean:dist"],
            "command": "deno compile -A --include ./static -o ./dist/server/server_linux_arm64 main.ts --target aarch64-unknown-linux-gnu"
        },
        "compile:all": {
            "description": "Create binaries for all available platforms",
            "dependencies": ["clean:dist", "compile:win", "compile:mac:arm64", "compile:mac:x64", "compile:linux:x64", "compile:linux:arm64"]
        },
        "dxt:pack":  "deno run -A scripts/dxt.ts",
        "dxt:win": {
            "description": "Create a DXT package for windows",
            "dependencies": ["compile:win", "dxt:pack"]
        },
        "dxt:mac:arm64": {
            "description": "Create a DXT package for mac (arm64)",
            "dependencies": ["compile:mac:arm64", "dxt:pack"]
        },
        "dxt:mac:x64": {
            "description": "Create a DXT package for mac (x64)",
            "dependencies": ["compile:mac:x64", "dxt:pack"]
        },
        "dxt:linux:x64": {
            "description": "Create a DXT package for linux (x64)",
            "dependencies": ["compile:linux:x64", "dxt:pack"]
        },
        "dxt:linux:arm64": {
            "description": "Create a DXT package for linux (arm64)",
            "dependencies": ["compile:linux:arm64", "dxt:pack"]
        },
        "dxt:all": {
            "description": "Create a DXT package for all platforms",
            "dependencies": ["compile:all", "dxt:pack"]
        }
    },
    "deploy": {
        "entrypoint": "main.ts"
    },
    "compilerOptions": {
        "strict": true,
        "erasableSyntaxOnly": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "verbatimModuleSyntax": true
    },
    "fmt": {
        "include": [
            "main.ts",
            "src/**/*.ts"
        ],
        "proseWrap": "always",
        "semiColons": true,
        "singleQuote": false,
        "useTabs": false,
        "bracePosition": "sameLine",
        "indentWidth": 2,
        "lineWidth": 100,
        "newLineKind": "lf",
        "nextControlFlowPosition": "sameLine",
        "operatorPosition": "sameLine",
        "useBraces": "whenNotSingleLine"
    },
    "lint": {
        "include": [
            "main.ts",
            "src/**/*.ts"
        ],
        "rules": {
            "tags": [
                "recommended",
                "jsr"
            ],
            "exclude": [
                "require-await"
            ],
            "include": [
                "no-useless-rename"
            ]
        }
    },
    "lock": {
        "path": "./deno.lock",
        "frozen": false
    },
    "unstable": [
        "kv",
        "cron"
    ]
}